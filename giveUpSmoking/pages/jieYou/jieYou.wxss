.top-nav{
	line-height: 54rpx;
	padding-left: 20rpx;
	background: #fff;
}
.top-view{
	height: 360rpx;
	padding: 0 22rpx;
	background: #fff
}
.top-view image{
	height: 335rpx;
	width: 100%;
}
.content-view{
	height: 230rpx;
	position: relative;
	overflow: hidden;
	background: #fff;
	margin: 10rpx 0;
}
.content-box{
	float: left;
	width: 50%;
	height: 100%;
	text-align: center;
}
.content-box-img{
	width: 70rpx;
	height: 70rpx;
	margin: 50rpx 0 32rpx 0;
}
.content-line{
	position: absolute;
	left: 50%;
	top: 15rpx;
	height: 200rpx;
	width: 3rpx;
	background: #e9e9e9;
}
.content-bottom{
	height: 430rpx;
	background: #fff;
}
.content-bottom swiper{
	height: 340rpx;
	padding-left: 20rpx;
}
.content-bottom swiper swiper-item{
	overflow: hidden;
}
.swiper-item-box{
	width: 215rpx;
	height: 260rpx;
	margin-right: 28rpx;
	border: 1rpx solid #dde7fc;
	box-sizing: border-box;
	float: left;
	text-align: center;
}
.swiper-item-box image{
	width: 100rpx;
	height: 100rpx;
	margin: 28rpx 0 19rpx 0;
}
.swiper-txt{
	font-size: 18rpx;
	margin-top: 10rpx;
}