	color: #53e0d2;
}
.song-img{
	position: relative;
	height: 330rpx;
}
.song-img image{
	position: absolute;
}
.play-img{
	width: 322rpx;
	height: 326rpx;
  left: 210rpx;
}
.play-img-little{
	width: 235rpx;
	height: 235rpx;
	border-radius: 50%;
	top: 47rpx;
	left: 255rpx;
}
.progress-view{
	position: absolute;
	left: 30rpx;
	top: 940rpx;
	width: 690rpx;
}
.progress-txt{
	overflow: hidden;
}
.current-time{
	float: left;
	color: #fff;
}
.duration-time{
	float: right;
