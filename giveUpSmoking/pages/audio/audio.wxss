.title{
	text-align: center;
	font-size: 33rpx;
	height: 70rpx;
	line-height: 70rpx;
	margin-top: 35rpx;
	color: #fff;
}
.rot{
	animation: Rot 2s infinite linear;
}
@keyframes Rot{
	from{
		transform: rotate(0)
	}to{
		transform: rotate(360deg)
	}
}
.song-name{
	text-align: center;
	font-size: 38rpx;
	height: 150rpx;
	line-height: 150rpx;
	color: #fff;
}
.song-lyrics{
	text-align: center;
	padding-top: 100rpx;
	color: #fff;
}
