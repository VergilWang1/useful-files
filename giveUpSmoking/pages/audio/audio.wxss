}
.progress{
	width: 685rpx;
	background: #fff;
	height: 10rpx;
	position: relative;
}
.progress-bar{
	background:  #53e0d2;
	position: absolute;
	height: 10rpx;
}
.progress-bar view{
	position: absolute;
	top: -5rpx;
	right: 0;
	height: 20rpx;
	width: 10rpx;
	background: #53e0d2;
}